#:set button_text_size 14

<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Bienvenido a CVMovil'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline: False
                password: True
                font_size: 28

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: 'Ingresar'
                font_size: button_text_size
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: (1, 153, 153, 1)
                on_press: root.do_login(login.text, password.text)

            Button:
                text: 'Cancelar'
                font_size: button_text_size